<div class="container text-center">
  <h1> <%= t('by_author.title') %> <%= @author.name %></h1>
  <div class="row">
    <% @films.each do |film| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <%= link_to image_tag(film.image, class: "card-img-top img-fluid"), film %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to film.title, film %></h5>
            <p class="card-text"><strong> <%= t('by_author.year') %> </strong> <%= film.year %></p>
            <p class="card-text"><strong> <%= t('by_author.genres') %> </strong>
              <% film.genres.each do |genre| %>
                <%= link_to genre.name, genre %>
                <% unless genre == film.genres.last %>, <% end %>
              <% end %>
            </p>
            <p class="card-text"><strong> <%= t('by_author.description') %> </strong> <%= film.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

