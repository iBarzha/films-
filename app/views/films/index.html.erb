<div class="container mt-5">
  <h2 class="text-center mb-4 fw-bold">All films</h2>
  <div class="row">
    <% @films.each do |film| %>
      <div class="col-lg-2 col-md-4 col-sm-6 mb-4">
        <%= link_to film_path(film) do %>
          <div class="card">
            <% if film.image.attached? %>
              <%= image_tag rails_blob_path(film.image), class: "card-img-top img-fluid img-height", alt: film.title %>
            <% else %>
              <div class="card-img-top img-height">No Image</div>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= film.title %></h5>
              <p class="card-text"><%= film.year %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

