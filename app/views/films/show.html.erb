<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <%= image_tag(@film.image, class: "card-img-top img-fluid") if @film.image.attached? %>
      </div>
    </div>
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title"><%= @film.title %></h2>
          <p class="card-text"><strong>Release Year:</strong> <%= @film.year %></p>
          <p class="card-text"><strong>Author:</strong> <%= @film.author.name %></p>
          <p class="card-text"><strong>Genre:</strong> <%= @film.genre.name %></p>
          <p class="card-text"><strong>Description:</strong> <%= @film.description %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="card mt-4">
        <div class="card-body">
          <h2 class="card-title">Comments</h2>
          <% @film.comments.each do |comment| %>
            <div class="comment mb-3">
              <p class="card-text"><strong><%= comment.user.email %>:</strong> <%= comment.body %></p>
              <% if comment.user == current_user %>
                <%= link_to 'Delete', [@film, comment], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
              <% end %>
            </div>
          <% end %>

          <% if user_signed_in? %>
            <div class="add-comment">
              <h3 class="card-title mt-4">Add a comment:</h3>
              <%= form_with(model: [ @film, @film.comments.build ], local: true) do |form| %>
                <div class="form-group mb-2">
                  <%= form.text_area :body, class: "form-control" %>
                </div>
                <div class="form-group">
                  <%= form.submit 'Post Comment', class: "btn btn-primary" %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
